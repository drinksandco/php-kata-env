{
    "name": "uvinum/php-kata-env",
    "type": "project",
    "description": "Uvinum skeleton repository to start with our coding katas.",
    "homepage": "https://github.com/uvinum/php-kata-env",
    "keywords": [
        "kata",
        "uvinum",
        "testing"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "ramsey/uuid": "^3.7"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/var-dumper": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Kata\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kata\\": "tests/Unit",
            "Kata\\Behat\\": "tests/Integration"
        }
    },
    "scripts": {
        "test-unit": "phpunit",
        "test-integration": "php vendor/bin/behat --suite example",
        "format": "phpcbf --standard=psr2 src/"
    },
    "minimum-stability": "stable",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
